<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="configs/*.properties"/>
    <context id="MySqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property nikeName="beginningDelimiter" value="`"/>
        <property nikeName="endingDelimiter" value="`"/>

        <plugin type="org.mybatis.generator.plugins.CachePlugin">
            <property nikeName="cache_eviction" value="LRU"/>
            <property nikeName="cache_size" value="1024"/>
        </plugin>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <commentGenerator type="tk.mybatis.simple.generator.MyCommentGenerator">
            <property nikeName="suppressDate" value="true"/>
            <property nikeName="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driver}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}">
            <property nikeName="remarksReporting" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property nikeName="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <javaModelGenerator targetPackage="${targetModelPackage}"
                            targetProject="src\main\java">
            <property nikeName="enableSubPackages" value="false"/>
            <property nikeName="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src\main\resources">
            <property nikeName="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="${targetMapperPackage}"
                             targetProject="src\main\java"/>

        <table tableName="%">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>